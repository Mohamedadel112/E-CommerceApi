@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
    var roleVM = new RoleVM(); // لإنشاء النموذج مباشرة هنا
}

<h2>Roles</h2>

<!-- Form لإنشاء Role جديد -->
<form method="post" asp-action="Create">
    <div class="input-group mb-2">
        <input asp-for="@roleVM.Name" name="Name" class="form-control" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-primary">Add new Role</button>
        </div>
    </div>
    <span asp-validation-for="@roleVM.Name" class="text-danger"></span>
</form>

<hr />

<!-- عرض الأدوار -->
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Role Id</th>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        No roles found.
    </div>
}
